{
  "patterns": [
    "(?i)AKIA[0-9A-Z]{16}", // AWS-like
    "(?i)ASIA[0-9A-Z]{16}", // AWS temp
    "(?i)ghp_[A-Za-z0-9]{36,}", // GitHub PAT
    "(?i)pat_[A-Za-z0-9]{20,}", // Generic PAT
    "(?i)eyJ[A-Za-z0-9_-]{10,}\\.[A-Za-z0-9_-]{10,}\\.[A-Za-z0-9_-]{10,}", // JWT
    "(?i)(postgres|mysql|mariadb|mongodb)://[^\\s]+:[^\\s]+@[^\\s]+", // DSN with user:pass
    "(?i)Bearer\\s+[A-Za-z0-9._-]{20,}", // Bearer tokens
    "-----BEGIN (?:RSA |EC )?PRIVATE KEY-----" // PEM keys
  ],
  "ignore": [
    "Plan-mejora/Secretos/**",
    "node_modules/**",
    "dist/**",
    "public/optimized/**",
    "coverage/**",
    "reports/**",
    "tmp*/**",
    ".lighthouse*/**"
  ],
  "note": "Copia a scripts/patterns/secrets.json si quieres activar el escaneo. Ajusta patrones seg√∫n el contexto."
}
