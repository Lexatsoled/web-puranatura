{
  "name": "pureza-naturalis-backend",
  "version": "1.0.0",
  "description": "Backend API REST para Pureza Naturalis con SQLite",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "cross-env REDIS_ENABLED=false vitest",
    "test:once": "cross-env REDIS_ENABLED=false vitest run",
    "test:coverage": "cross-env REDIS_ENABLED=false vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "logs:view": "powershell -NoProfile -Command \"$log = Get-ChildItem logs -Filter 'app-*.log' | Sort-Object LastWriteTime -Descending | Select-Object -First 1; if ($log) { Get-Content $log.FullName -Wait } else { Write-Host 'No app logs yet.' }\"",
    "logs:errors": "powershell -NoProfile -Command \"$log = Get-ChildItem logs -Filter 'error-*.log' | Sort-Object LastWriteTime -Descending | Select-Object -First 1; if ($log) { Get-Content $log.FullName -Wait } else { Write-Host 'No error logs yet.' }\"",
    "logs:clean": "powershell -NoProfile -Command \"if (Test-Path logs) { Get-ChildItem logs -Filter *.gz | Where-Object { $_.LastWriteTime -lt (Get-Date).AddDays(-30) } | Remove-Item -Force }\"",
    "logs:analyze": "node ../scripts/analyze-logs.js",
    "backup:create": "tsx scripts/backupCli.ts create",
    "backup:list": "tsx scripts/backupCli.ts list",
    "backup:restore": "tsx scripts/backupCli.ts restore",
    "backup:check": "tsx scripts/backupCli.ts check"
  },
  "dependencies": {
    "@fastify/compress": "^7.0.3",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/csrf-protection": "^5.1.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@sentry/node": "^10.23.0",
    "@sentry/profiling-node": "^10.23.0",
    "@types/form-data": "^2.2.1",
    "@types/ioredis": "^4.28.10",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.5.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.0",
    "fastify": "^4.28.0",
    "fastify-multipart": "^5.4.0",
    "form-data": "^4.0.4",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-loki": "^2.6.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "rotating-file-stream": "^3.2.7",
    "sharp": "^0.34.5",
    "validator": "^13.15.20",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.0",
    "@types/pino": "^7.0.4",
    "@types/sharp": "^0.31.1",
    "@types/validator": "^13.15.4",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.26.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "api",
    "rest",
    "sqlite",
    "fastify",
    "ecommerce"
  ],
  "author": "Pureza Naturalis",
  "license": "MIT"
}
