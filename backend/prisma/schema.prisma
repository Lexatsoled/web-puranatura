// Prisma schema para la API BFF
// Define el catálogo básico y las entidades necesarias para autenticación y pedidos.
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orders       Order[]
  reviews      Review[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?
  category    String?
  price       Float
  imageUrl    String?
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  reviews     Review[]
  orderItems  OrderItem[]
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Order {
  id        String      @id @default(cuid())
  total     Float
  status    String      @default("PENDING")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  items     OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int
  unitPrice Float
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  category  String
  action    String
  label     String?
  value     Float?
  metadata  String?
  sessionId String?
  traceId   String?
  userIp    String?
  userAgent String?
  eventTime DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([category, action])
  @@index([sessionId])
  @@index([createdAt])
}
