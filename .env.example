# Frontend / build variables
# Replace values with real secrets in your environment (do NOT commit).
VITE_API_URL=http://localhost:3001
VITE_GA_ID=G-XXXXXXX
VITE_FB_PIXEL_ID=FB-XXXXXXX
# LLM provider keys should never be stored in the repository. Use your secret manager instead.
# Si necesitas integrar un LLM externo, guarda las credenciales en tu gestor de secretos y no las comites.

# Optional flags
ENABLE_ANALYTICS=false
# Configuración del entorno
VITE_APP_NAME=PuraNatura
VITE_APP_DESCRIPTION="Terapias Naturales y Productos de Bienestar"
VITE_APP_URL=http://localhost:5173

# API Keys y endpoints (configúrelo según su backend)
# SECURITY WARNING:
# 1. NEVER commit the actual .env file to version control.
# 2. Rotate JWT_SECRET and JWT_REFRESH_SECRET regularly (e.g., every 90 days).
# 3. In production, protect this file and ensure limited read permissions (chmod 600).

# API Configuration
VITE_API_URL=http://localhost:3001/api

# Analytics & Marketing (Public Identifiers)
VITE_GA_ID=G-XXXXXXXXXX
VITE_FB_PIXEL_ID=XXXXXXXXXXXXXXX

# Feature Flags
VITE_ENABLE_BLOG=true
VITE_ENABLE_STORE=true
VITE_ENABLE_TESTIMONIALS=true

# Database Configuration (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/puranatura?schema=public"

# Redis Configuration (Cache & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_local_password


# Security Secrets (CHANGE THESE IN PRODUCTION!)
# Use `openssl rand -base64 32` to generate strong secrets.
JWT_SECRET="dev_jwt_secret_change_me"
JWT_REFRESH_SECRET="dev_jwt_refresh_secret_change_me"
COOKIE_SECRET="dev_cookie_secret_change_me"

# Security Policy
CSP_REPORT_ONLY=false

