{
  "name": "web-puranatura---terapias-naturales",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "check:encoding": "node tools/check_encoding.cjs",
    "clean:mojibake": "node scripts/clean_specific_files.cjs",
    "validate:pr": "npm run check:encoding && npm run type-check && npm run lint:ci && npm run test:ci",
    "dev": "vite",
    "build": "npm run optimize-images && tsc && vite build",
    "build:deploy": "vite build --mode production",
    "build:prod": "npm run type-check && npm run validate:comments && npm run docs && vite build --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 999",
    "lint:ci": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "preview": "vite preview --host 0.0.0.0 --port 3000",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format",
    "docs": "typedoc",
    "docs:encoding-check": "node scripts/docs_encoding_check.cjs",
    "docs:serve": "npx serve docs/api",
    "validate:comments": "node scripts/validate-comments.js",
    "check:headers": "node scripts/validate-comments.js",
    "prepare": "husky",
    "test:unit": "vitest run",
    "build:backend": "tsc --project backend/tsconfig.json",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:full": "npm run test:coverage && npm run test:e2e",
    "test:a11y": "vitest run --testMatch='**/*.a11y.test.tsx'",
    "lighthouse:a11y": "lighthouse http://localhost:5173 --only-categories=accessibility --view",
    "optimize-images": "ts-node scripts/optimizeImages.ts",
    "fix-encoding": "node scripts/fix-encoding.js",
    "sitemap": "node scripts/exportDataFromTS.cjs && ts-node scripts/generateSitemap.ts",
    "generate-icons": "ts-node scripts/generateIcons.ts",
    "audit:all": "node tools/regenerate_reports.cjs",
    "audit:text": "node tools/text_audit.cjs",
    "audit:links": "node tools/links_check.cjs",
    "audit:components": "node tools/components_audit.cjs",
    "audit:secret-history": "node scripts/run-audit-secret-history.cjs",
    "scan:secrets": "npx gitleaks detect --verbose --no-color",
    "scan:secrets:history": "npx gitleaks detect --verbose --no-color --log-opts=\"--all\"",
    "scan:secrets:report": "npx gitleaks detect --report-format json --report-path reports/secrets-scan.json --verbose",
    "test:tap": "tap backend/src/__tests__/*.test.ts",
    "analyze": "vite build"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/montserrat": "^5.2.8",
    "@fontsource/playfair-display": "^5.2.8",
    "@hookform/resolvers": "^5.2.1",
    "@react-hook/intersection-observer": "^3.1.2",
    "@sentry/react": "^10.23.0",
    "@sentry/tracing": "^7.120.4",
    "@sentry/vite-plugin": "^4.5.0",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.1",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@types/react-window": "^1.8.8",
    "@types/recharts": "^1.8.29",
    "@vitejs/plugin-react": "^5.0.4",
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.12",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "immer": "^10.1.1",
    "nanoid": "^5.1.5",
    "next-seo": "^6.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.61.1",
    "react-i18next": "^16.2.4",
    "react-lazy-load-image-component": "^1.6.3",
    "react-router-dom": "^7.7.1",
    "react-virtuoso": "^4.14.1",
    "react-window": "^2.2.1",
    "react-window-infinite-loader": "^2.0.0",
    "recharts": "^3.1.0",
    "vite-imagetools": "^7.1.0",
    "vite-plugin-pwa": "^1.1.0",
    "web-vitals": "^5.1.0",
    "workbox-background-sync": "^7.3.0",
    "workbox-expiration": "^7.3.0",
    "workbox-window": "^7.3.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@pureza/gitleaks-shim": "file:tools/gitleaks-shim",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.19.1",
    "@types/react-dom": "^18.2.0",
    "@types/react-helmet-async": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autocannon": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.11.0",
    "bundlesize": "^0.17.2",
    "cypress": "^14.5.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.7",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "jest": "^25.0.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lighthouse": "^13.0.1",
    "lint-staged": "^15.2.10",
    "msw": "^2.10.4",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "size-limit": "^11.2.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.46.0",
    "vite": "^6.2.0",
    "vite-plugin-compression2": "^2.3.0",
    "vitest": "^3.2.4",
    "workbox-cacheable-response": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ],
  "bundlesize": [
    {
      "path": "./dist/assets/js/react-vendor-*.js",
      "maxSize": "350 kB"
    },
    {
      "path": "./dist/assets/js/vendor-*.js",
      "maxSize": "200 kB"
    },
    {
      "path": "./dist/assets/js/ui-vendor-*.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./dist/assets/js/state-vendor-*.js",
      "maxSize": "50 kB"
    }
  ]
}
