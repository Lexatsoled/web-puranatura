# Production Environment Configuration
# COPY THIS FILE TO .env.production
# DO NOT COMMIT THE ACTUAL .env.production FILE

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
TRUST_PROXY=1 # Set to 1 if behind Nginx/ALB

# Database (PostgreSQL Required for Prod)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/puranatura?schema=public"

# Security (MUST CHANGE THESE)
# Generate random strings: `openssl rand -base64 32`
JWT_SECRET="CHANGE_ME_IN_PROD_LONG_RANDOM_STRING"
JWT_REFRESH_SECRET="CHANGE_ME_IN_PROD_DIFFERENT_LONG_RANDOM_STRING"

# Auth Config
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS
ALLOWED_ORIGINS="https://puranatura.com,https://www.puranatura.com"

# Logging
LOG_LEVEL="info"

# CSP Reporting
CSP_REPORT_ONLY="false"

# Admin
ADMIN_EMAILS="admin@puranatura.com"
