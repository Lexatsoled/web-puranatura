{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "staticDistDir": "./dist",
      "settings": {
        "preset": "mobile",
        "formFactor": "mobile",
        "screenEmulation": {
          "mobile": true,
          "width": 360,
          "height": 640,
          "deviceScaleFactor": 2.625,
          "disabled": false
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": "warn",
        "categories:accessibility": "warn",
        "categories:best-practices": "warn",
        "categories:seo": "warn"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./reports/lhci-latest"
    }
  }
}
