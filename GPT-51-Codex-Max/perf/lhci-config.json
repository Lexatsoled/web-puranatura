{
  "ci": {
      "collect": {
        "numberOfRuns": 1,
      "startServerCommand": "node scripts/preview-lhci-server.cjs",
      "startServerReadyPattern": "LHCI_PREVIEW_READY http://127\\.0\\.0\\.1:4173/",
      "startServerReadyTimeout": 60000,
        "url": [
        "http://127.0.0.1:4173/",
        "http://127.0.0.1:4173/store",
        "http://127.0.0.1:4173/product/1",
        "http://127.0.0.1:4173/blog",
        "http://127.0.0.1:4173/contacto"
      ],
      "settings": {
        "preset": "desktop",
        "onlyCategories": [
          "performance",
          "accessibility",
          "best-practices",
          "seo"
        ],
        "emulatedFormFactor": "desktop",
        "throttlingMethod": "provided",
        "extraHeaders": "{\"Cookie\":\"cookie_consent=granted\"}",
        "disableStorageReset": true,
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "reports/lhci"
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
        "minScore": 0.9
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:seo": [
          "error",
          {
        "minScore": 0.9
          }
        ],
        "largest-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 4500,
            "aggregationMethod": "optimistic"
          }
        ],
        "cumulative-layout-shift": [
          "warn",
          {
            "maxNumericValue": 0.1,
            "aggregationMethod": "optimistic"
          }
        ],
        "interactive": [
          "warn",
          {
            "maxNumericValue": 4000,
            "aggregationMethod": "optimistic"
          }
        ]
      }
    }
  }
}
